<div class="contact-form">
  <h2>Contact Me</h2>
  <%= simple_form_for @contact do |f| %>
    <div class="col-md-6">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :message, :as => :text, :input_html => {:rows => 10} %>
      <div class= "d-none">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <%= f.button :submit, 'Send Message', class: 'btn-form' %>
    </div>
  <% end %>
</div>
